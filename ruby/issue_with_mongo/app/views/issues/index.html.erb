<h1>Listing issues</h1>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th>No followers</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td>
          <%= image_tag issue.image.url(:small)%>
        </td>
        <td><%= issue.title %></td>
        <td><%= issue.description %></td>
        <td><%= issue.no_followers %></td>
        <td><%= link_to 'Show', issue_path(id:issue.id) %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: {confirm: 'Are you sure?'}, class: "destroy_class" %></td>
        <td>
          <%=link_to issue.project.name, project_path(issue.project)%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
