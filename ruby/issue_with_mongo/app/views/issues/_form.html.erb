<div ng-controller="Issue_edit">
<%= form_for @issue, :html => {:multipart => true, "ng-upload" => "uploadComplete"} do |f| %>
    <%if @issue.errors.any? %>
      <div id="error_explanation">
        <h2><%=pluralize(@issue.errors.count, "errors")%> prohibited this issue from being saved:</h2>
  
        <ul>
          <%@issue.errors.full_messages.each do |msg|%>
            <li><%=msg%></li>
          <%end%>
        </ul>
      </div>
    <%end%>
  
    <div class="field">
      <%=f.label :title%>
      <%=f.text_field :title%>
    </div>
    <div class="field">
      <%=f.label :description%>
      <%=f.text_field :description%>
    </div>
    <div>
      <%=f.file_field :image%>
      <input type="submit" value="Send" upload-submit="uploadComplete(content, completed)">
    </div>
    <div class="field">
      <%=f.label :no_followers%>
      <%=f.text_field :no_followers%>
    </div>
    <div class="actions">
      <%=f.submit%>
    </div>
  <%end%>
  </div>